<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackFragment"
    android:orientation="horizontal"
    android:weightSum="1">

    <!-- Instrument -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:orientation="vertical"
        android:id="@+id/track_instrument_container"
        android:background="@drawable/button_beat">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/instrument_name"
            android:padding="@dimen/padding_default"
            android:textColor="@color/colorButtonDefaultDark"
            android:textSize="@dimen/text_size_large"
            android:maxLines="1"
            android:maxWidth="@dimen/track_button_width"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/track_button_container"
        android:weightSum=".8"
        android:padding="0dp"
        android:layout_margin="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_1"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_2"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_3"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_4"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_5"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_6"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_7"
            android:background="@drawable/button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/track_button_height"
            android:layout_weight=".1"
            android:id="@+id/button_8"
            android:background="@drawable/button" />
    </LinearLayout>
</LinearLayout>